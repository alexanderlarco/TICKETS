<LINK REL=StyleSheet HREF="/css/productos/listaProductos.css" TYPE="text/css" MEDIA=screen>
<form action="/productos/lista/{{user.idDueñoTienda}}">
    <nav id="nav1">
        <div id="boton">
            <a id="entradas" href="/entradaSalida/eleccion/{{user.idDueñoTienda}}"><button type="button">Entradas y
                    Salidas</button></a>
            <a id="bodega" href="/ProductoEntrada/lista/{{user.idDueñoTienda}}"><button type="button">Entrada
                    Productos</button></a>
        </div>
    </nav>
    <div id="contenedor">
        <div class="row">
            {{#each productos}}
            <div id="tarjeta">
                <div id="CODIGO">
                    <label>Código:</label>
                    <input type="text" value="{{codigo}}" id="codigo" readonly></input>
                </div>
                <div id="PRODUCTO">
                    <label>Producto:</label>
                    <input type="text" value="{{NombreProducto}}" id="NombreProducto" readonly></input>
                </div>
                <div id="CANTIDAD">
                    <label>Cantidad Total:</label>
                    <input type="text" value="{{productoCantidad}}" id="Cantidad" readonly></input>
                </div>
                <div id="UnidadVenta">
                    <label>Cantidad Venta:</label>
                    <input type="text" value="{{cantidadVenta}}" id="unidadVenta" readonly></input>
                </div>
                <div id="CANTIDADVenta">
                    <label>Cantidad Restante:</label>
                    <input type="text" value="{{productoCantidad}}" id="CantidadVenta" readonly></input>
                </div>
                <div id="PrecioVenta">
                    <label id="">Precio de Venta:</label>
                    <input type="text" name="precioVenta" id="precioVenta" value="{{precioVenta}}$" readonly>
                </div>
                <div id="CADUCIDAD">
                    <label id="caducidad">Fecha:</label>
                    <input type="datetime" name="FechaCadusidad" id="FechaCadusidad" value="{{FechaCadusidad}}"
                        readonly>
                </div>
                <div id="Editar">
                    <a href="/productos/editar/{{idProductos}}">
                        <img src="/img/iconos/edit.png">
                    </a>
                </div>
            </div>
            {{else}}
            <div id="agregar">
                <div>
                    <p>¡No has registrado Productos.!</p>
                    <a href="/ProductoEntrada/agregar/{{user.idDueñoTienda}}">¡Introducir uno!</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</form>