<div id="contenedor">
    {{#each Productos}}
    <form action="/ProductoEntrada/editar/{{idProductoEntradas}}" method="POST">
        <p>Editar Producto </p>
        <div id="CODIGO">
            <label id="codigos">CÃ³digo:</label>
