<link rel="stylesheet" href="/css/clientes/perfil.css">
<form action="/clientes/Perfil/{{user.idUsuarios}}" method="get"></form>
<div id="cliente">
    <div id="Foto">
        <img src="/img/avatar.png" id="foto">
    </div>
    <div id="datos">
        {{#each cliente}}
        <div id="Cedula">
            <label id="">Cedula:</label>
            <input type="text" name="cedula" id="cedula" value="{{username}}" readonly>
        </div>
        <div id="Nombres">
            <label id="">Nombres:</label>
            <input type="text" name="cliente" id="Nombre" value="{{Nombres}}" readonly>
        </div>
        <div id="Direccion">
            <label id="">Direccion:</label>
            <input type="text" name="direccion" id="direccion" value="{{Direccion}}" readonly>
        </div>
        <div id="Celular">
            <label id="">Celular:</label>
            <input type="text" name="celular" id="celular" value="{{Celular}}" readonly>
        </div>
        <div id="Telefono">
            <label id="">Telefono:</label>
            <input type="text" name="telefono" id="telefono" value="{{telefono}}" readonly>
        </div>
        {{/each}}
    </div>
</div>

