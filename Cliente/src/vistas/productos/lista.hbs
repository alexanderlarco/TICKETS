<link rel="stylesheet" href="/css/productos/lista.css">
{{#each tienda}}
<form action="/Compra/listaCompleta/{{idTiendas}}" method="get">
{{/each}}
    <table id="tabla">
        <tr>
            <td id="nombres"><p id="nombre">Lista de Productos</p></td>
            <td id="nombres"><p id="Cantidad">Cantidad</p></td>
            <td id="nombres"><p id="precio">Precios</p></td>
        </tr>
        {{#each lista}}
        <tr>
            <td id="Producto"><input type="text" name="Nombre" value="{{NombreProducto}}" readonly></td>
            <td id="Cantidad"><input type="texto" name="Cantidad" id="cantidaes" value="{{Cantidad}}" readonly></td>
            <td id="precio"><input type="text" name="Precio" value="{{Precio}}" readonly id="precios"></td>
            <td><button><a href="/producto/Compra/Eliminar/{{id}}">Eliminar</a></button></td>
        </tr>
        {{/each}}
        <tr>
            <td><label id="">Total:</label></td>
            <td></td>
            <td><input type="text" name="" id="total"></td>
        </tr>
<input type="button" id="confirmar" onclick="elecciones.aparacion()" value="confirmar">
    </table>
</form>

<div id="eleccion">
    <button type="button" onclick="elecciones.desaparicion()">X</button>
     {{#each tienda}}
    <div id="notaVenta">
     <a href="/formaPago/notaVenta/{{idTiendas}}">Nota de Venta</a>
    </div>
    <div id="Factura">
        <a href="/formaPago/factura/{{idTiendas}}">Factura</a>
    </div>
    {{/each}}
</div>

<script src="/js/calculoPrecio.js"></script>
<script src="/js/eleccion.js"></script>