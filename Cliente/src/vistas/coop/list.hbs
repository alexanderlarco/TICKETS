<link rel="stylesheet" href="/css/coop/coop.css">
{{#if  user}}
    {{>navigationUser  }}
{{else}}
    {{>navigation }}
{{/if}}
<div id="container">
    <h4 id="title">Nuestras Cooperativas</h4>
    <div id="detail">
        <form action="/coop/search" method="get" id="search-bar">
            <input type="search" id="searchCoop" name="name" value="{{search}}" pattern=".*\S.*"
                   placeholder="Buscar por nombre" required>
            <button id="search-btn" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px"
                     width="29" height="29"
                     viewBox="0 0 30 30"
                     style=" fill:#000000;">
                    <path d="M 13 3 C 7.4889971 3 3 7.4889971 3 13 C 3 18.511003 7.4889971 23 13 23 C 15.396508 23 17.597385 22.148986 19.322266 20.736328 L 25.292969 26.707031 A 1.0001 1.0001 0 1 0 26.707031 25.292969 L 20.736328 19.322266 C 22.148986 17.597385 23 15.396508 23 13 C 23 7.4889971 18.511003 3 13 3 z M 13 5 C 17.430123 5 21 8.5698774 21 13 C 21 17.430123 17.430123 21 13 21 C 8.5698774 21 5 17.430123 5 13 C 5 8.5698774 8.5698774 5 13 5 z"></path>
                </svg>
            </button>
        </form>
        {{#if user}}
            <button id="btn-reserve"> Reservar</button>
        {{/if}}
    </div>


<div id="catalog">
    {{#each coops}}
        <div id="card">
            <img id="logo-coop" src="{{logo}}">
            <div id="text-container">
                <h3>{{name}}</h3>
                <div id="detail-coop">
                    <span id="dtl"><strong>Direcci√≥n:</strong> {{address}}</span>
                    <span id="dtl"><strong>Email:</strong> {{email}}</span>
                    {{#if user}}
                        <button id="btn-reserve"> Reservar</button>
                    {{else}}
                        <a href="../login" id="btn-reserve"> Reservar</a>

                    {{/if}}
                </div>
            </div>
        </div>
    {{else}}

    </div>
        <div id="card-not-found">
            No se encontraron Cooperativas
        </div>
    {{/each}}


</div>
