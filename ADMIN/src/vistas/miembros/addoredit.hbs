<style>
    .p-right {
        display: flex;
        justify-content: flex-end;
    }

    .form-group a {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 500;
    }
</style>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card text-center">
                <div class="card-header m-3">
                    <h3 style="color: #012E40;">LOGIN</h3>
                </div>
                <div class="card-body">
                   <img
						          style='width: 100px ;'
						          src='https://cdn-icons-png.flaticon.com/512/4004/4004174.png'
						          class='card-img-top'
						          alt='logo'
          					/>
                    <form action="/admin/login" method="POST">
                        <div class="form-group mt-2">
                            <input type="number" name="CI" placeholder="Nro. Cedula" class="form-control"
                                autocomplete="off">
                        </div>
                        <div class=" form-group mt-2">
                            <input type="password" id="password" name="pass" placeholder="Password"
                                class="form-control" autocomplete="off">
                        </div>

                        <div class="form-group mt-2">

                            <div class="mb-2">
                                <a href="signin/forgot">¿Olvidate tu constraseñaaa?</a>
                            </div>

                            {{> message}}

                            <button type="submit" class="btn btn-block text-light mt-3" style="background-color: #012E40;">
                                Ingresar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>